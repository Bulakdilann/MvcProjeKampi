@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h3>Kategori Listeleme Sayfası</h3>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <th>@x.CategoryID</th>
            <td>@x.CategoryName</td>
            <td><a href="/AdminCategory/DeleteCategory/@x.CategoryID" class="btn btn-danger btn-xs"> Sil</a></td>
            <td><a href="/AdminCategory/EditCategory/@x.CategoryID" class="btn btn-warning btn-xs" > Güncelle</a></td>
            <td><a href="#" class="btn btn-primary btn-xs" > Başlıklar</a></td>
        </tr>
    }


</table>
<a href="/AdminCategory/AddCategory" class="btn btn-info">Kategori Ekle</a>
